PORT=8080
ENVIRONMENT=development

# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=scrumai_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Auth
JWT_SECRET=your-secret-key
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173

# AI Provider Configuration
# Options: freellm (default), openai, gemini, huggingface, mock
AI_PROVIDER=freellm

# Provide keys below to use other models:
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
GEMINI_API_KEY=
HUGGINGFACE_API_KEY=
